{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "iso8601": {
      "description": "e.g. 2014-06-29",
      "pattern": "^([1-2][0-9]{3}-[0-1][0-9]-[0-3][0-9]|[1-2][0-9]{3}-[0-1][0-9]|[1-2][0-9]{3})$",
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "description": "link to the version of the schema that can validate the resume",
      "format": "uri",
      "type": "string"
    },
    "awards": {
      "additionalItems": false,
      "description": "list of awards have been received",
      "items": {
        "additionalProperties": false,
        "properties": {
          "awarder": {
            "description": "name of the awarder",
            "type": "string"
          },
          "date": {
            "$ref": "#/definitions/iso8601",
            "description": "date of the award",
            "format": "date",
            "type": "string"
          },
          "summary": {
            "description": "reason of the award",
            "type": "string"
          },
          "title": {
            "description": "title of the award",
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "title",
          "date",
          "awarder"
        ]
      },
      "type": "array"
    },
    "basics": {
      "additionalProperties": true,
      "properties": {
        "email": {
          "description": "e.g. thomas@gmail.com",
          "format": "email",
          "type": "string"
        },
        "image": {
          "description": "URL (as per RFC 3986) to a image in JPEG or PNG format",
          "type": "string"
        },
        "label": {
          "description": "e.g. Web Developer",
          "type": "string"
        },
        "location": {
          "additionalProperties": true,
          "properties": {
            "address": {
              "description": "To add multiple address lines, use \n. For example, 1234 Glücklichkeit Straße\nHinterhaus 5. Etage li.",
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "countryCode": {
              "description": "code as per ISO-3166-1 ALPHA-2, e.g. US, AU, IN",
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            },
            "region": {
              "description": "The general region where you live. Can be a US state, or a province, for instance.",
              "type": "string"
            }
          },
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "phone": {
          "description": "Phone numbers are stored as strings so use any format you like, e.g. 712-117-2923",
          "type": "string"
        },
        "profiles": {
          "additionalItems": false,
          "description": "Specify any number of social networks that you participate in",
          "items": {
            "additionalProperties": true,
            "properties": {
              "network": {
                "description": "e.g. Facebook or Twitter",
                "type": "string"
              },
              "url": {
                "description": "e.g. http://twitter.example.com/neutralthoughts",
                "format": "uri",
                "type": "string"
              },
              "username": {
                "description": "e.g. neutralthoughts",
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "summary": {
          "description": "Write a short 2-3 sentence biography about yourself",
          "type": "string"
        },
        "url": {
          "description": "URL (as per RFC 3986) to your website, e.g. personal homepage",
          "format": "uri",
          "type": "string"
        }
      },
      "type": "object"
    },
    "education": {
      "additionalItems": false,
      "items": {
        "additionalProperties": false,
        "properties": {
          "area": {
            "description": "area of study",
            "type": "string"
          },
          "courses": {
            "additionalItems": false,
            "description": "notable courses/subjects",
            "items": {
              "description": "e.g. H1302 - Introduction to American history",
              "type": "string"
            },
            "type": "array"
          },
          "endDate": {
            "$ref": "#/definitions/iso8601",
            "description": "end date",
            "format": "date",
            "type": "string"
          },
          "gpa": {
            "description": "grade point average, e.g. 3.67/4.0",
            "type": "string"
          },
          "institution": {
            "description": "e.g. Massachusetts Institute of Technology",
            "type": "string"
          },
          "startDate": {
            "$ref": "#/definitions/iso8601",
            "description": "start date",
            "format": "date",
            "type": "string"
          },
          "studyType": {
            "description": "type of study",
            "type": "string"
          },
          "highlights": {
            "description": "some of accomplishments",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "honors": {
            "description": "some education honours",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "location": {
            "additionalProperties": false,
            "description": "location of institution",
            "properties": {
              "lat": {
                "type": "number"
              },
              "long": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "long"
            ],
            "type": "object"
          },
          "score": {
            "additionalProperties": false,
            "properties": {
              "best": {
                "description": "best possible score",
                "type": "string"
              },
              "type": {
                "description": "type of the score",
                "type": "string"
              },
              "value": {
                "description": "value of the score",
                "type": "string"
              },
              "worst": {
                "description": "worst possible score",
                "type": "string"
              }
            },
            "required": [
              "type",
              "value",
              "best",
              "worst"
            ],
            "type": "object"
          }
        },
        "type": "object",
        "required": [
          "institution",
          "area",
          "studyType",
          "startDate",
          "endDate"
        ]
      },
      "type": "array"
    },
    "interests": {
      "additionalItems": false,
      "items": {
        "additionalProperties": false,
        "properties": {
          "keywords": {
            "additionalItems": false,
            "items": {
              "description": "e.g. Friedrich Nietzsche",
              "type": "string"
            },
            "type": "array",
            "description": "keywords of the interest"
          },
          "name": {
            "description": "name of the interest",
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "name"
        ]
      },
      "type": "array"
    },
    "languages": {
      "additionalItems": false,
      "description": "list of languages",
      "items": {
        "additionalProperties": false,
        "properties": {
          "fluency": {
            "description": "e.g. Fluent, Beginner",
            "type": "string"
          },
          "language": {
            "description": "name of language",
            "type": "string"
          },
          "level": {
            "description": "proficiency level for the language",
            "enum": [
              "basic",
              "conversational",
              "fluent",
              "native"
            ],
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "language"
        ]
      },
      "type": "array"
    },
    "meta": {
      "additionalProperties": false,
      "description": "the schema version and any other tooling configuration",
      "properties": {
        "canonical": {
          "description": "URL (as per RFC 3986) to latest version of this document",
          "format": "uri",
          "type": "string"
        },
        "lastModified": {
          "description": "date-time of last modified",
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "description": "version field which follows semver",
          "type": "string"
        },
        "uuid": {
          "description": "uuid v4 of the resume",
          "type": "string"
        }
      },
      "type": "object"
    },
    "projects": {
      "additionalItems": false,
      "description": "list of career projects",
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "description": "short summary of project",
            "type": "string"
          },
          "endDate": {
            "$ref": "#/definitions/iso8601",
            "description": "end date",
            "format": "date",
            "type": "string"
          },
          "entity": {
            "description": "relevant company/entity affiliations",
            "type": "string"
          },
          "highlights": {
            "additionalItems": false,
            "description": "specify multiple features",
            "items": {
              "description": "e.g. Directs you close but not quite there",
              "type": "string"
            },
            "type": "array"
          },
          "keywords": {
            "additionalItems": false,
            "description": "specify special elements involved",
            "items": {
              "description": "e.g. AngularJS",
              "type": "string"
            },
            "type": "array"
          },
          "name": {
            "description": "name of the project",
            "type": "string"
          },
          "roles": {
            "additionalItems": false,
            "description": "specify your role on this project",
            "items": {
              "description": "e.g. Team Lead, Speaker, Writer",
              "type": "string"
            },
            "type": "array"
          },
          "startDate": {
            "$ref": "#/definitions/iso8601",
            "format": "date",
            "type": "string"
          },
          "type": {
            "description": "type of the project",
            "type": "string"
          },
          "url": {
            "description": "url of the project",
            "format": "uri",
            "type": "string"
          },
          "location": {
            "additionalProperties": false,
            "description": "location of the project",
            "properties": {
              "lat": {
                "type": "number"
              },
              "long": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "long"
            ],
            "type": "object"
          },
          "resources": {
            "description": "specify multiple resources with label",
            "items": {
              "additionalProperties": false,
              "properties": {
                "label": {
                  "description": "label of the resource",
                  "type": "string"
                },
                "url": {
                  "description": "url of the resource",
                  "format": "uri",
                  "type": "string"
                }
              },
              "required": [
                "url",
                "label"
              ],
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object",
        "required": [
          "name",
          "startDate"
        ]
      },
      "type": "array"
    },
    "publications": {
      "additionalItems": false,
      "description": "list of publications",
      "items": {
        "additionalProperties": false,
        "properties": {
          "name": {
            "description": "name of the publication",
            "type": "string"
          },
          "publisher": {
            "description": "name of the publisher",
            "type": "string"
          },
          "releaseDate": {
            "$ref": "#/definitions/iso8601"
          },
          "summary": {
            "description": "short summary of the publication",
            "type": "string"
          },
          "url": {
            "description": "url of the publication",
            "format": "uri",
            "type": "string"
          },
          "publicationDate": {
            "description": "date of publication",
            "format": "date",
            "type": "string"
          },
          "resources": {
            "description": "multiple resources with label",
            "items": {
              "additionalProperties": false,
              "properties": {
                "label": {
                  "description": "label of the resource",
                  "type": "string"
                },
                "url": {
                  "description": "url of the resource",
                  "format": "uri",
                  "type": "string"
                }
              },
              "required": [
                "url",
                "label"
              ],
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object",
        "required": [
          "name",
          "publisher"
        ]
      },
      "type": "array"
    },
    "references": {
      "additionalItems": false,
      "description": "list of references",
      "items": {
        "additionalProperties": false,
        "properties": {
          "name": {
            "description": "name of the reference",
            "type": "string"
          },
          "reference": {
            "description": "reference text",
            "type": "string"
          },
          "company": {
            "description": "company name",
            "type": "string"
          },
          "position": {
            "description": "position of reference",
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "reference"
        ]
      },
      "type": "array"
    },
    "skills": {
      "additionalItems": false,
      "description": "list of professional skill-sets",
      "items": {
        "additionalProperties": false,
        "properties": {
          "keywords": {
            "additionalItems": false,
            "description": "some keywords pertaining to the skill",
            "items": {
              "description": "e.g. HTML",
              "type": "string"
            },
            "type": "array"
          },
          "level": {
            "description": "e.g. Master",
            "type": "string"
          },
          "name": {
            "description": "name of the skill",
            "type": "string"
          },
          "proficiency": {
            "description": "proficiency level of the skill",
            "enum": [
              "beginner",
              "early",
              "competent",
              "advanced",
              "expert"
            ],
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "name",
          "proficiency"
        ]
      },
      "type": "array"
    },
    "volunteer": {
      "additionalItems": false,
      "items": {
        "additionalProperties": false,
        "properties": {
          "endDate": {
            "$ref": "#/definitions/iso8601",
            "description": "end date",
            "format": "date",
            "type": "string"
          },
          "highlights": {
            "additionalItems": false,
            "description": "some of accomplishments",
            "items": {
              "description": "e.g. Increased profits by 20% from 2011-2012 through viral advertising",
              "type": "string"
            },
            "type": "array"
          },
          "organization": {
            "description": "name of the organization",
            "type": "string"
          },
          "position": {
            "description": "type of the contribution",
            "type": "string"
          },
          "startDate": {
            "$ref": "#/definitions/iso8601",
            "description": "start date",
            "format": "date",
            "type": "string"
          },
          "summary": {
            "description": "an overview of responsibilities",
            "type": "string"
          },
          "url": {
            "description": "related link to support volunteer experience",
            "format": "uri",
            "type": "string"
          },
          "location": {
            "additionalProperties": false,
            "description": "location of activity",
            "properties": {
              "lat": {
                "type": "number"
              },
              "long": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "long"
            ],
            "type": "object"
          }
        },
        "type": "object",
        "required": [
          "organization",
          "position",
          "startDate"
        ]
      },
      "type": "array"
    },
    "work": {
      "additionalItems": false,
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "description": "companies primary activity",
            "type": "string"
          },
          "endDate": {
            "$ref": "#/definitions/iso8601",
            "description": "end date",
            "format": "date",
            "type": "string"
          },
          "highlights": {
            "additionalItems": false,
            "description": "some of accomplishments",
            "items": {
              "description": "e.g. Increased profits by 20% from 2011-2012 through viral advertising",
              "type": "string"
            },
            "type": "array"
          },
          "location": {
            "description": "location of the company",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "lat": {
                "type": "number"
              },
              "long": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "long"
            ]
          },
          "name": {
            "description": "name of company",
            "type": "string"
          },
          "position": {
            "description": "position at the company",
            "type": "string"
          },
          "startDate": {
            "$ref": "#/definitions/iso8601",
            "description": "start date",
            "format": "date",
            "type": "string"
          },
          "summary": {
            "description": "an overview of responsibilities",
            "type": "string"
          },
          "url": {
            "description": "url of the company website",
            "format": "uri",
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "name",
          "position",
          "startDate"
        ]
      },
      "type": "array"
    },
    "certificate": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "code": {
            "description": "code of the certificate",
            "type": "string"
          },
          "doesNotExpire": {
            "type": "boolean"
          },
          "endDate": {
            "description": "end date of certificate",
            "format": "date",
            "type": "string"
          },
          "grantDate": {
            "description": "date of the grant",
            "format": "date",
            "type": "string"
          },
          "name": {
            "description": "name of the certificate",
            "type": "string"
          },
          "score": {
            "additionalProperties": false,
            "description": "exam score",
            "properties": {
              "best": {
                "description": "best possible score",
                "type": "string"
              },
              "type": {
                "description": "type of the score",
                "type": "string"
              },
              "value": {
                "description": "value of the score",
                "type": "string"
              },
              "worst": {
                "description": "worst possible score",
                "type": "string"
              }
            },
            "required": [
              "type",
              "value",
              "best",
              "worst"
            ],
            "type": "object"
          },
          "verification": {
            "description": "external candidate verification URL",
            "format": "uri",
            "type": "string"
          },
          "website": {
            "description": "link to issuing authority's description of the certificate",
            "format": "uri",
            "type": "string"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "core": {
      "additionalProperties": false,
      "properties": {
        "livingArea": {
          "description": "living area which could be city or country or even continent",
          "type": "string"
        },
        "title": {
          "description": "job title",
          "type": "string"
        },
        "workArea": {
          "description": "work area which could be city or country or even remote",
          "type": "string"
        }
      },
      "type": "object"
    },
    "legal": {
      "description": "list of legals",
      "items": {
        "additionalProperties": false,
        "properties": {
          "applicationDate": {
            "description": "date of the application",
            "format": "date",
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "coAuthors": {
            "type": "string"
          },
          "currentAssignee": {
            "type": "string"
          },
          "description": {
            "description": "a brief description about the document",
            "type": "string"
          },
          "endDate": {
            "description": "end date",
            "format": "date",
            "type": "string"
          },
          "grantDate": {
            "description": "date of the grant",
            "format": "date",
            "type": "string"
          },
          "idNumber": {
            "description": "application number or Id Number",
            "type": "string"
          },
          "legalType": {
            "description": "type of the document",
            "type": "string"
          },
          "name": {
            "description": "name of the document",
            "type": "string"
          },
          "previousAssignee": {
            "type": "string"
          },
          "resources": {
            "description": "multiple resources with label",
            "items": {
              "additionalProperties": false,
              "properties": {
                "label": {
                  "description": "label of the resource",
                  "type": "string"
                },
                "url": {
                  "description": "url of the resource",
                  "format": "uri",
                  "type": "string"
                }
              },
              "required": [
                "url",
                "label"
              ],
              "type": "object"
            },
            "type": "array"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "personal": {
      "additionalProperties": false,
      "description": "sensitive informations",
      "properties": {
        "birthPlace": {
          "description": "place of birth",
          "type": "string"
        },
        "birthday": {
          "description": "birthday date",
          "format": "date",
          "type": "string"
        },
        "currentLocation": {
          "additionalProperties": false,
          "description": "living location",
          "properties": {
            "lat": {
              "type": "number"
            },
            "long": {
              "type": "number"
            }
          },
          "required": [
            "lat",
            "long"
          ],
          "type": "object"
        },
        "email": {
          "description": "email address",
          "format": "idn-email",
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "image": {
          "description": "url of the personal photo",
          "type": "string"
        },
        "name": {
          "description": "full name",
          "type": "string"
        },
        "permanentLocation": {
          "additionalProperties": false,
          "description": "permanently living location",
          "properties": {
            "lat": {
              "type": "number"
            },
            "long": {
              "type": "number"
            }
          },
          "required": [
            "lat",
            "long"
          ],
          "type": "object"
        },
        "phone": {
          "description": "phone number",
          "type": "string"
        },
        "postalAddress": {
          "type": "string"
        },
        "profiles": {
          "description": "list of social networks",
          "items": {
            "additionalProperties": false,
            "properties": {
              "network": {
                "description": "name of the network",
                "type": "string"
              },
              "url": {
                "description": "url of the profile",
                "format": "uri",
                "type": "string"
              },
              "username": {
                "description": "username in the network",
                "type": "string"
              }
            },
            "required": [
              "network",
              "username",
              "url"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "relationshipStatus": {
          "description": "civil status",
          "type": "string"
        },
        "summary": {
          "description": "a short sentence about yourself",
          "type": "string"
        },
        "url": {
          "description": "homepage url",
          "format": "uri",
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "title": "Resumic resume Schema",
  "type": "object",
  "required": [
    "core",
    "personal",
    "work",
    "education",
    "volunteer",
    "publications",
    "legal",
    "skills",
    "awards",
    "projects",
    "certificate",
    "references",
    "languages",
    "interests",
    "meta"
  ]
}
